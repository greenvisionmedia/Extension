{
    "manifest_version": 3,
    "name": "GV Publish",
    "description": "Publish your webflow site to servers running on renewable energy. ",
    "version": "0.1",
    "icons": {
        "16": "/icons/icon16.png",
        "32": "/icons/icon32.png",
        "48": "/icons/icon48.png",
        "128": "/icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": ["https://webflow.com/design/*"],
            "js": [
                "bcrypt.min.js",
                "drawdown.min.js",
                "co2.min.js",
                "index.min.js",
                "meter.min.js",
                "menu.min.js",
                "panel.min.js",
                "clipboard.min.js"
            ],
            "css": ["stylesheet.min.css"]
        },
        {
            "matches": ["https://*/*"],
            "js": ["checker.js"]
        }
    ],
    "action": {
        "default_icon": {
            "16": "/icons/icon-deactive-16.png",
            "32": "/icons/icon-deactive-32.png",
            "48": "/icons/icon-deactive-48.png",
            "128": "/icons/icon-deactive-128.png"
        }
    },
    "background": {
        "service_worker": "background.min.js"
    },
    "permissions": ["storage", "scripting", "downloads"],
    "host_permissions": [
        "https://webflow.com/design/*",
        "https://*.greenvision.media/*"
    ]
}
